<resources>
    <style name="BabyCare" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorBackground">@color/babycare_background</item>
        <item name="android:textColorPrimary">@color/text_color_babycare</item>
        <item name="android:textSize">20dp</item>
        <item name="colorPrimaryDark">@color/secondColor</item>
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorAccent">@color/button_babycare_normal</item>
        <item name="android:textColorSecondaryInverse">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/secondColor</item>
    </style>

    <style name="NaviText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/button_babycare_normal</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBabyCare" parent="android:style/TextAppearance.Medium">
        <item name="android:fontFamily">casual</item>
        <item name="android:textColor">@color/text_color_babycare</item>
    </style>

    <style name="textCalendar" parent="android:style/TextAppearance.Medium">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/text_color_babycare</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <style name ="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:fontFamily">casual</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="colorAccent">@color/button_babycare_normal</item>
    </style>

    <style name="BabyCare.PopMe">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>


    </style>

</resources>
